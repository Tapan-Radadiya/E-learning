{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true
  },
  "typeRoots": [
    "./src/types",
    "./node_modules/@types"
  ],
  "include": [
    "src",
    "src/types"
  ],
  "exclude": [
    "node_modules"
  ]
}